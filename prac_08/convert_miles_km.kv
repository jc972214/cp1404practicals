BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: user_input
            multiline: False
            on_text_validate: app.get_valid_miles()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
            Button:
                text: 'Down'
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_conversion()
    Label:
        id: output_label
        text: ''
        font_size: 48
        color: (1, 1, 0, 1)


